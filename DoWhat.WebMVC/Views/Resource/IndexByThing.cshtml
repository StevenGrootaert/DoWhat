@model IEnumerable<DoWhat.Models.ResourceModels.ResourceListByThing>

@{
    ViewBag.Title = "IndexByThing";
}

<h2>Resources for Thing</h2>

<p>
    @Html.ActionLink("Create New", "Create") 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
